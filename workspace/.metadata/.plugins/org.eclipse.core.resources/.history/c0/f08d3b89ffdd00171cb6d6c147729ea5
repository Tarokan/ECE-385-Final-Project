;

void setCoordinates() { // more like set player info
    unsigned int coords = ((x_coord & 0x00FF) << 8)  + (y_coord & 0x00FF);
    AVL_PTR[0] = coords;
    printf("+++++++++++++++++++++++++++\n");
    printf("SET COORDINATES TO %d, %d\n", x_coord, y_coord);
    printf("+++++++++++++++++++++++++++\n");

    redraw = 1;
    unsigned int info = player_direction & 0x000F;
    AVL_PTR[1] = info;
    printf("+++++++++++++++++++++++++++?\n");
    printf("PLAYER DIR: %d, REDRAW: %d\n", player_direction, redraw);
    printf("PLAYER INFO: %d\n", info);
    printf("+++++++++++++++++++++++++++\n");
}

void moveLeft() {
    if(x_coord == 0) {
        return;
    }
    if(test_map[y_coord * MAP_WIDTH + x_coord - 1] == 0x2) {
        return;
    }
    x_coord -= 1;
    if(player_direction != 3) {
    	player_direction = 3;
    }
}
void moveDown() {
    if(y_coord == MAP_HEIGHT - 1) {
        return;
    }
    if(test_map[(y_coord + 1) * MAP_WIDTH + x_coord] == 0x2) {
        return;
    }
    y_coord += 1;
    if(player_direction != 0) {
    	player_direction = 0;
    }
}
void moveRight() {
    if(x_coord == MAP_WIDTH - 1) {
        return;
    }
    if(test_map[y_coord * MAP_WIDTH + x_coord + 1] == 0x2) {
        return;
    }
    x_coord += 1;
    if(player_direction != 1) {
    	player_direction = 1;
    }
}
void moveUp() {
    if(y_coord == 0) {
        return;
    }
    if(test_map[(y_coord - 1) * MAP_WIDTH + x_coord] == 0x2) {
        return;
    }
    y_coord -= 1;
    if(player_direction != 2) {
    	player_direction = 2;
    }
}

int isGrass() {
    return (test_map[y_coord * MAP_WIDTH + x_coord] == 0x1);
}

void keyStroke(int keycode) {
	printf("============================\n");
	printf("Keycode sent: %d\n", keycode);
	printf("============================\n");
    //time_t cur_time;
    //time(&cur_time);
    //if(difftime(cur_time, last_time) >= 1.0) {
        switch (keycode) {
            case 4: // a
                moveLeft();
                // if(isGrass()) {
                //     encounter();
                // }
                setCoordinates();
                break;
            case 22: // s
                moveDown();
                // if(isGrass()) {
                //     encounter();
                // }
                setCoordinates();
                break;
            case 7: // d
                moveRight();
                // if(isGrass()) {
                //     encounter();
                // }
                setCoordinates();
                break;
            case 26: // w
                moveUp();
                // if(isGrass()) {
                //     encounter();
                // }
                setCoordinates();
                break;
              }
        //if(redraw == 1) {
          //redraw = 0;
          //unsetRedraw();
        //}

        //time(&last_time);
    //}
}
